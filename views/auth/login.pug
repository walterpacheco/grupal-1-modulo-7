doctype html
html
  head
    title Inicio de Sesión
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css")
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css')
  body
    .d-flex.justify-content-center.align-items-center.min-vh-100.bg-light
      .card.shadow-lg(style="width: 400px;")
        .card-header.bg-primary.text-white.text-center
          h2 Iniciar Sesión
        .card-body
          form(action="/auth/login" method="POST")
            each error in errores
              .alert.alert-danger #{error.msg}

            .form-group
              label(for="correo") Correo
              input.form-control(type="email" name="correo" placeholder="Ingresa tu correo" required)

            .form-group.mt-3
              label(for="password") Contraseña
              input.form-control(type="password" name="password" placeholder="Ingresa tu contraseña" required)

            button.btn.btn-primary.btn-block.mt-4(type="submit")
              i.bi.bi-box-arrow-in-right.mr-1 Iniciar Sesión

          .text-center.mt-3
            p ¿No tienes cuenta? 
            a(href='/auth/registro', class='text-primary') Regístrate aquí

    // Scripts de Bootstrap
    script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js")
    script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js")
