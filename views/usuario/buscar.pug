doctype html
html
  head
    title Buscar Usuario por Correo
    // Enlace a Bootstrap CSS
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/styles.css')
  body
    .container.mt-5
      .row.justify-content-center
        .col-md-6
          h1.text-center.mb-4 Buscar Usuario por Correo
          form(action='/usuarios/consultar-correo', method='POST')
            .mb-3
              label(for='correo', class='form-label') Ingrese el Correo
              input(type='email', name='correo', class='form-control', required)
            button(type='submit', class='btn btn-primary w-100 mb-3') Buscar
            a(href='/', class='btn btn-secondary w-100') Regresar

    // Enlace a Bootstrap JS (opcional para funcionalidades din√°micas de Bootstrap)
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js')
