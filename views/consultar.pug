doctype html
html
  head
    title Consultar Usuarios
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/styles.css')
  body
    .container.mt-5
      h1.text-center Lista de Usuarios
      .table-responsive
        table(class='table table-bordered table-striped table-hover')
          thead
            tr
              th ID
              th User_name
              th Correo
              th Nombre
              th RUT
              th Rol
              th Acciones
          tbody
            each usuario in usuarios
              tr
                td= usuario.id
                td= usuario.user_name
                td= usuario.correo
                td= usuario.nombre
                td= usuario.rut
                td= usuario.rol
                td
                  a(href=`/actualizar/${usuario.id}`, class='btn btn-warning btn-sm me-2') Editar
                  a(href='#', class='btn btn-danger btn-sm', onclick=`eliminarUsuario(${usuario.id})`) Eliminar

  
      form#formEliminar(method='POST', style='display:none')
        input(type='hidden', name='_method', value='DELETE')

    script.
      function eliminarUsuario(id) {
        const form = document.getElementById('formEliminar');
        form.action = `/eliminar/${id}`;
        form.submit();
      }

    a(href='/', class='btn btn-primary w-40') Regresar