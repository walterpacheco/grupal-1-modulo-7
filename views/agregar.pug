doctype html
html
  head
    title Agregar Usuario
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/styles.css')
  body
    .container.mt-5
      .row.justify-content-center
        .col-md-6
          h1.text-center Agregar Usuario
          form(action='/agregar', method='POST')
            .mb-3
              label(for='user_name', class='form-label') User_name
              input(type='text', name='user_name', class='form-control', required)
            .mb-3
              label(for='password', class='form-label') Password
              input(type='password', name='password', class='form-control', required)
            .mb-3
              label(for='correo', class='form-label') Correo
              input(type='email', name='correo', class='form-control', required)
            .mb-3
              label(for='nombre', class='form-label') Nombre
              input(type='text', name='nombre', class='form-control')
            .mb-3
              label(for='rut', class='form-label') RUT
              input(type='text', name='rut', class='form-control')
            .mb-3
              label(for='rol', class='form-label') Rol
              select(name='rol', class='form-select')
                option(value='admin') Admin
                option(value='shopper') Shopper
            button(type='submit', class='btn btn-primary w-100') Agregar Usuario


              a(href='/', class='btn btn-primary w-100') Regresar